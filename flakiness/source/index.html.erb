---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<div class="index">
  <h2>Blog</h2>
  <div class="article-list">
  <ul>
<% page_articles.each_with_index do |article, i| %>
  <li>
    <span class="article-title"><%= link_to article.title, article %></span>
    <span class="article-date"><%= article.date.strftime('%b %e, %Y') %></span>
  </li>
<% end %>
  </ul>
  </div>

  <div>
  <ul>
    <li><a href="/about.html">About Me</a></li>
  </ul>
  </div>


</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
